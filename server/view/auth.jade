html
    head
        title= title
    body
        case type
            when 'qq'
                script.
                    opener.finishAuth((function(hash) {
                        var hashParams = {};
                        var e,
                            a = /\+/g,  // Regex for replacing addition symbol with a space
                            r = /([^&;=]+)=?([^&;]*)/g,
                            d = function (s) { return decodeURIComponent(s.replace(a, " ")); },
                            q = hash.substring(1);

                        while (e = r.exec(q))
                           hashParams[d(e[1])] = d(e[2]);

                        return hashParams;
                    })(location.hash));
                    window.close();
            default
